# deepFluxUniHelp - Environment variables
# Copy to .env and fill in your values

# ==== Database ====
DATABASE_PATH=./data/app.db

# ==== Authentication & Security ====
# Generate a random secret key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-min-32-chars-generate-with-secrets-module
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Default admin user (created on first run if no users exist)
ADMIN_EMAIL=admin@university.edu
ADMIN_PASSWORD=ChangeMe123!

# ==== LLM Configuration ====
# Choose one: Groq or OpenAI
GROQ_API_KEY=sk-your-groq-key-here
OPENAI_API_KEY=sk-your-openai-key-here

# LLM Model selection
LLM_MODEL=llama-3.1-8b-instant
# For OpenAI: LLM_MODEL=gpt-4o-mini

# ==== RAG Configuration ====
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K=4
RAG_TIMEOUT=60

# ==== API Configuration ====
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# ==== Frontend (Streamlit) ====
STREAMLIT_PORT=8501
# API_BASE_URL=http://localhost:8000  # URL for frontend to call API
